            <input type="text" name="email" placeholder="Seu e-mail">
            <br>
            <button type="submit">Entrar</button>
        </form>
    </section>
    <% include ..footer %>
    <footer>
        <small>Ntalk - Agenda de contatos</small>
    </footer>
    
</body>
</html>